<Page x:Class="Client.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Логин" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="20" Margin="20"/>
        <TextBlock Text="Пароль" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="20" Margin="20"/>
        <TextBox Grid.Column="1" FontSize="20" Margin="20,51,20,51"/>
        <TextBox Grid.Column="1" FontSize="20" Margin="20,51,20,51" Grid.Row="1"/>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Авторизоваться" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="40,15"/>
    </Grid>

</Page>
